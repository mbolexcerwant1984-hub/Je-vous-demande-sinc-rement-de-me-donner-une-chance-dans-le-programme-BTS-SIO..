    <!-- Bouton de mode sombre/clair -->
    <button id="themeToggleBtn" onclick="toggleTheme()">Passer en mode sombre/clair</button>

    <!-- Bouton interactif -->
    <button id="magicBtn" onclick="changeColor()">Cliquez-moi !</button>

    <!-- Formulaire -->
    <form id="formulaireDaniil" onsubmit="return verifForm()">
        <h2>Contactez-moi</h2>
        <input type="text" id="monNom" placeholder="Votre nom" required>
        <input type="email" id="monEmail" placeholder="Votre email" required>
        <textarea id="monMessage" placeholder="Votre message" oninput="updateCharCount()" required></textarea>
        <div id="charCount">0 caractÃ¨res</div>
        <button type="submit">Envoyer</button>
    </form>

    <div id="smiley" style="display:none;">ðŸ˜Š</div>

    <script>
        // Fonction de bascule entre le mode sombre et clair
        function toggleTheme() {
            const body = document.body;
            body.classList.toggle("dark");

            const button = document.getElementById("themeToggleBtn");
            button.textContent = body.classList.contains("dark") ? "Passer en mode clair" : "Passer en mode sombre";
        }

        // Fonction pour changer la couleur du bouton
        function changeColor() {
            const btn = document.getElementById("magicBtn");
            const colors = ["#006d77", "#33b5b3", "#ff9f1c", "#ff5c8d", "#8ac926"];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            btn.style.backgroundColor = randomColor;
        }

        // Fonction de validation du formulaire
        function verifForm() {
            let nom = document.getElementById("monNom").value;
            let email = document.getElementById("monEmail").value;
            let message = document.getElementById("monMessage").value;

            if (!nom || !email || !message) {
                alert("Tous les champs doivent Ãªtre remplis !");
                return false;
            }

            alert("Merci " + nom + " ! Votre message a Ã©tÃ© envoyÃ©.");
            document.getElementById("smiley").style.display = "inline";
            return false;
        }

        // Fonction pour mettre Ã  jour le compteur de caractÃ¨res
        function updateCharCount() {
            const message = document.getElementById("monMessage").value;
            document.getElementById("charCount").textContent = message.length + " caractÃ¨res";
        }
    </script>
